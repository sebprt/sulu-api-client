{
    "name": "sebprt/sulu-api-client",
    "description": "A PHP client library for the Sulu CMS API",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "SÃ©bastien Parrat",
            "email": "sebastien.parrat@orange.fr"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-mbstring": "*",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^2.0",
        "php-http/discovery": "^1.20",
        "psr/log": "^3.0",
        "php-http/guzzle7-adapter": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "Sulu\\ApiClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sulu\\ApiClient\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "nyholm/psr7": "PSR-7 implementation for requests/responses/streams"
      },
    "minimum-stability": "stable",
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix --config=.php-cs-fixer.dist.php",
        "cs-check": "php-cs-fixer fix --config=.php-cs-fixer.dist.php --dry-run --diff"
    }
}
